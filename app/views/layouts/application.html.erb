<!DOCTYPE html>
<html>
  <head>
    <title>Soundstorm</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Raleway" rel="stylesheet">
    <link rel="shortcut icon" href="<%= image_url('favicon.ico') %>" type="image/x-icon">
    <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/2.0.5/wavesurfer.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <script>
      <% if logged_in? %>
        window.currentUser = <%= render('api/users/user.json.jbuilder', user: current_user ).html_safe %>
      <% end %>
    </script>
    <%= yield %>
  </body>
</html>
